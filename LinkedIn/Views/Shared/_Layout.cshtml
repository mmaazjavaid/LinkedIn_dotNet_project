<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/font.css">
    
    <style>
        * {
            margin: 0%;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #F3F2EF;
        }

        .container {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            width: 100%;
            height: max-content;
            background-color: #F3F2EF;

        }

        .navbar {
            display: flex;
            width: 100%;
            height: max-content;
            align-items: center;
            justify-content: center;
            background-color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            box-shadow: 0px 2.98256px 7.4564px rgba(0, 0, 0, 0.2);
        }

        .logo-container {
            display: flex;
            width: 88%;
            justify-content: space-between;
            background-color: white;
            /* margin-left: 10px; */
        }

        .logo-container img {
            height: 80px;

        }

        .links-container{
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
        }
        .links-container a{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-evenly;
            width: 100px;
            background-color: white;
            height: 100%;
            text-decoration: none;
            color: black;
            
            /* width: 100%; */
        }
        .links-container a i{
            font-size: x-large;
            background-color: white;
        }
        .links-container a h4{
            background-color: white;
        }


    </style>
    
</head>
<body>
    <div class="container">
        <div class="navbar">
            <div class="logo-container">
                <img src="~/images/logo.png" alt="logo">

                <div class="links-container">
                    
                        <a class="home-link" asp-action="News">
                            <i class="fa fa-home" aria-hidden="true"></i>
                            <h4>Home</h4>
                        </a>
                    
                    
                        <a class="Jobs-link" asp-action="News">
                            <i class="fa fa-briefcase" aria-hidden="true"></i>
                            <h4>Jobs</h4>
                        </a>
                    
                    
                        <a class="profile-link"  asp-action="Profile">
                            <img style="width: 30px; height:30px; border-radius:50%;" src="~/images/person.jpg" alt="" srcset="">
                            <h4>Me</h4>
                        </a>
                    
                </div>



            </div>
        </div>
        @RenderBody()
    </div>
</body>
</html>
