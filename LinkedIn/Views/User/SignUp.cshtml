@using LinkedIn.Models
@model User
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        .login-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-top: 30px;
            margin-bottom: 30px;
            width: 30%;
            height: 350px;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 10px;
        }

        .heading {
            width: 80%;
        }

        .login-form {
            display: flex;
            flex-direction: column;
            width: 80%;
            align-items: center;
            margin-top: 30px;
            margin-bottom: 30px;
        }

        input {
            display: flex;

            height: 40px;
            border-radius: 5px;
            border: 1px solid #191919;
            width: 100%;
            padding-left: 10px;
            margin-bottom: 20px;
        }

        button {
            width: 100%;
            height: 50px;
            background-color: #0A66C2;
            border: none;
            border-radius: 25px;
            color: white;
        }
    </style>
    <link rel="stylesheet" href="~/css/signup.css">
    
        <div class="login-container">
            <div class="heading">
                <h1 style="color: #191919; font-weight: 500; margin-bottom: 5px;">Sign Up</h1>
                <p style="color: #191919; font-size: small;">Stay updated on your professional world</p>
            </div>
            <form action="/User/SignUp" method="POST" class="login-form">
                <input asp-for="Email"  placeholder="Email" >
                <input asp-for="Password"  placeholder="Password" >
                <button type="submit">Agree & Join</button>
            </form>
            
            

        </div>
   

