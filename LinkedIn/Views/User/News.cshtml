@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .home-link{
        border-bottom: 2px solid black;
    }
</style>
<link rel="stylesheet" href="~/css/news.css">
<div class="news-feed-container">
           
    
@Html.Partial("~/Views/Shared/_NewsProfile.cshtml")
            
            <div class="news_and_post_container">
            
            <div class="news-feed-post">
                <div class="post-banner">
                    <div>
                        <p>Create Post</p>
                    </div>
                    <div>
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </div>
                </div>
                <div class="post-body">
                    <img src="~/images/person.jpg" alt="image" srcset="">
                </div>
                <div class="post-input">
                    <input type="text" placeholder="Write Something to Inspire...!" name="" id="">
                </div>
                <div class="post-footer">
                    <div>
                        <i class="fa fa-picture-o" aria-hidden="true"></i>
                        <i class="fa fa-video-camera" aria-hidden="true"></i>
                        <i class="fa fa-file-text" aria-hidden="true"></i>
                        <i class="fa fa-bar-chart" aria-hidden="true"></i>

                    </div>
                    <div>
                        <button>post</button>
                    </div>
                </div>
            </div>
                
            <div class="news-feed-news">

                @await Component.InvokeAsync("News")



            </div>



            </div>
    @Html.Partial("~/Views/Shared/_Recommendation.cshtml")
        </div>